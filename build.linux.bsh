#!/bin/bash
SCRIPT_DIR="$(dirname $(pwd)/$0)"

cd "$SCRIPT_DIR"
pwd
rm -Rf build
mkdir build
cd build
pwd
# Release
cmake ../source -DCMAKE_EXPORT_COMPILE_COMMANDS=YES -DCMAKE_BUILD_TYPE=Debug -DCPACK_GENERATOR="TZ;TGZ;STGZ;DEB;RPM"
cd ..
test -r compile_commands.json || ln -s build/compile_commands.json
pwd
echo "# In order to make project run:"
echo "make -C build"
